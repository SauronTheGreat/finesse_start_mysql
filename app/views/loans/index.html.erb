<h1>Listing loans</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Loan type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @loans.each do |loan| %>
  <tr>
    <td><%= loan.name %></td>
    <td><%= loan.loan_type_id %></td>
    <td><%= link_to 'Show', loan %></td>
    <td><%= link_to 'Edit', edit_loan_path(loan) %></td>
    <td><%= link_to 'Destroy', loan, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

